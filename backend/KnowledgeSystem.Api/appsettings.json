{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",
  
  "ConnectionStrings": {
    "KnowledgeDb": "Host=postgres;Port=5432;Database=knowledgeDB;Username=raguser;Password=ragpass"
  },
  
  "Ollama": {
    "BaseUrl": "http://ollama:11434",
    "EmbeddingModel": "nomic-embed-text",
    "LlmModel": "llama3.2:1b",
    "TimeoutSeconds": 30,
    "Embeddings": {
      "Model": "nomic-embed-text",
      "TimeoutSeconds": 60
    },
    "LanguageModel": {
      "Model": "llama3.2:1b",
      "TimeoutSeconds": 120
    }
  },
  
  "Conversation": {
    "MaxConversations": 1000,
    "TtlHours": 24,
    "MaxTurnsInContext": 5
  },
  
  "RagConfidence": {
    "MinAnswerSimilarity": 0.04,
    "LowConfidenceThreshold": 0.06,
    "Description": "MinAnswerSimilarity: Below this, don't call LLM. LowConfidenceThreshold: Below this, mark as low confidence."
  }
}
